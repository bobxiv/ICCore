  <Application.Views>
    <Ribbon>
      <!-- Application Menu -->
      <Ribbon.ApplicationMenu>
        <ApplicationMenu>
          <MenuGroup>
            <Button CommandName="LoadConfig" />
            <Button CommandName="SaveConfig" />
            <Button CommandName="SaveAsConfig" />
          </MenuGroup>
        </ApplicationMenu>  
      </Ribbon.ApplicationMenu>

      <!-- Dialog Tabs -->
      <Ribbon.Tabs>

        <!-- Application Tab -->
        <Tab CommandName="ApplicationTab">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="OutputGroup" Size="Large"/>
              </ScalingPolicy.IdealSizes>
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          
          <Group CommandName="OutputGroup" SizeDefinition="TwoButtons">
            <ToggleButton CommandName="CMD" />
            <ToggleButton CommandName="Log" />
          </Group>

          <Group CommandName="SoundGroup" SizeDefinition="OneButton">
            <ToggleButton CommandName="Sound" />
          </Group>
                 
        </Tab>
        
          <!-- DirectX Tab -->
        <Tab CommandName="DirectXTab">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="FrameGroup" Size="Large"/>
                <Scale Group="DeviceGroup" Size="Large"/>
                <Scale Group="MSGroup" Size="Large"/>  
              </ScalingPolicy.IdealSizes>
            </ScalingPolicy>
          </Tab.ScalingPolicy>
              
              
          <Group CommandName="FrameGroup" SizeDefinition="BigButtonsAndSmallButtonsOrInputs" >
            <ControlGroup>
              <ToggleButton CommandName="VSync" />
            </ControlGroup>
            <ControlGroup>
              <ToggleButton CommandName="FTS" />
              <ComboBox  CommandName="Time" IsEditable="true" />
            </ControlGroup>
          </Group>
          <Group CommandName="DeviceGroup" SizeDefinition="ThreeButtons" >
              <ToggleButton CommandName="HAL"  />
              <ToggleButton CommandName="REF"  />
              <ToggleButton CommandName="WARP" />
          </Group>
          <Group CommandName="MSGroup" SizeDefinition="TwoButtons" >
            <SplitButton CommandName="MSSelect" >
              <SplitButton.ButtonItem>
                <ToggleButton CommandName="MS0Samples"  />
              </SplitButton.ButtonItem>
              <SplitButton.MenuGroups>
                <MenuGroup>
                  <ToggleButton CommandName="MS2Samples"  />
                  <ToggleButton CommandName="MS3Samples"  />
                  <ToggleButton CommandName="MS4Samples"  />
                  <ToggleButton CommandName="MS5Samples"  />
                  <ToggleButton CommandName="MS6Samples"  />
                  <ToggleButton CommandName="MS7Samples"  />
                  <ToggleButton CommandName="MS8Samples"  />
                  <ToggleButton CommandName="MS9Samples"  />
                  <ToggleButton CommandName="MS10Samples"  />
                  <ToggleButton CommandName="MS11Samples"  />
                  <ToggleButton CommandName="MS12Samples"  />
                  <ToggleButton CommandName="MS13Samples"  />
                  <ToggleButton CommandName="MS14Samples"  />
                  <ToggleButton CommandName="MS15Samples"  />
                  <ToggleButton CommandName="MS16Samples"  />
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton >
            <SplitButton CommandName="MSQuality" >
              <ToggleButton CommandName="MS0Samples"  />
            </SplitButton >
          </Group>
        </Tab>

          <!-- Display Device Tab -->
        <Tab CommandName="DisplayDeviceTab">
          <Group>
            <Button>         </Button>
          </Group>
        </Tab>

          <!-- Input Tab -->
        <Tab CommandName="InputTab">
          <Group CommandName="InputDeviceGroup" SizeDefinition="ThreeButtons">
            <SplitButton CommandName="JoystickInputSelect" >
              <SplitButton.ButtonItem>
                <ToggleButton CommandName="JoystickInput" />
              </SplitButton.ButtonItem>
              <SplitButton.MenuGroups>
                <MenuGroup>
                  <ToggleButton CommandName="Xbox360Control"/>
                </MenuGroup>
                <MenuGroup>
                  <Button CommandName="RefreshInputDevices" />
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton>
            <ToggleButton CommandName="MouseInput" />
            <ToggleButton CommandName="KeyboardInput" />
          </Group>

          <Group CommandName="InputInfoDeviceGroup" SizeDefinition="TwoButtons">
            <ToggleButton CommandName="MicrophoneInput" />
            <ToggleButton CommandName="WebcamInput" />
          </Group>
        </Tab>
        <Tab CommandName="GraphicDetalleTab">
          <Group>
            <ToggleButton >   </ToggleButton>
          </Group>
        </Tab>
        <Tab CommandName="CPUDetalleTab">
          <Group>
            <ToggleButton >   </ToggleButton>
          </Group>
        </Tab>
        
      </Ribbon.Tabs>
    </Ribbon>
  </Application.Views>

</Application>
